{{#spritesheet}}
.icon {
    background-image: url('{{{escaped_image}}}');
    background-repeat: no-repeat;
    overflow: hidden;
    display: inline-block;
}
{{/spritesheet}}

{{#items}}
.icon_{{name}} {
    width:  {{px.width}};
    height: {{px.height}};
    background-position: {{px.offset_x}}, {{px.offset_y}};
} 
{{/items}}